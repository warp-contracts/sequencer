    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Blockchain, one node",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": ["start"],
            "program": "${workspaceFolder}/cmd/sequencerd/main.go",
        },
        {
            "name": "Send DataItem signed with Arweave wallet",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": ["tx", "sequencer", "dataitem", "--arweave-wallet", "${workspaceFolder}/utils/arweave-empty-wallet.json", "--data", "${workspaceFolder}/readme.md", "--from", "alice"],
            "program": "${workspaceFolder}/cmd/sequencerd/main.go",
        },
        {
            "name": "Send DataItem signed with Etherum private key",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": ["tx", "sequencer", "dataitem", "--etherum-private-key", "${workspaceFolder}/utils/etherum-private-key.hex", "--data", "${workspaceFolder}/readme.md", "--from", "alice"],
            "program": "${workspaceFolder}/cmd/sequencerd/main.go",
        }
    ]
}